<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/design_navigation_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="NavigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">@dimen/design_navigation_item_height</item><!-- menu item height- vary as u need -->
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--Spinner-->
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <!--Edit-Text-->
    <style name="EditTextHintAddress" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:textColorPrimary">@color/colorMenu</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorMenu</item>
        <item name="android:textColor">@color/colorMenu</item>
        <item name="colorControlNormal">@color/colorMenu</item>
        <item name="colorControlActivated">@color/colorMenu</item>
   </style>

    <style name="AppTheme.TextInputLayout" parent="TextAppearance.Design.Hint">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textSize">@dimen/textInputLayout_size</item>
        <!-- <item name="textSize">@dimen/textInputLayout_text_size</item>-->
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/colorAccentLight</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorAccentLight</item>
    </style>
    <style name="AppTheme.MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>


</resources>
