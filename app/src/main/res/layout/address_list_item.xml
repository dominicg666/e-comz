<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/textViewaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_comment_text_marginTop"
            android:text="Johar Mor"
            android:textColor="@color/colorAccent"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/item_comment_title"
            android:layout_marginStart="19dp"
            android:layout_toStartOf="@+id/imageButton2" />

        <TextView
            android:id="@+id/textViewsubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewaddress"
            android:layout_alignStart="@+id/textViewaddress"
            android:textSize="@dimen/item_comment_text"
            android:lineSpacingExtra="@dimen/item_comment_text_line_height"
            android:minHeight="12dp"
            android:singleLine="false"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. "
            android:layout_marginTop="@dimen/item_comment_text_marginTop"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:background="@mipmap/ic_cross"
            android:layout_width="@dimen/cart_cross"
            android:layout_height="@dimen/cart_cross"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>