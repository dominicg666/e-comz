<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/item_comment_user_pic"
            android:layout_height="@dimen/item_comment_user_pic"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/comment_user01"
            android:padding="0dp"/>

        <TextView
            android:id="@+id/textViewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_comment_text_marginTop"
            android:text="Johar Mor"
            android:textColor="@color/colorAccent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/profile_image"
            android:textSize="@dimen/item_comment_title"
            android:layout_marginStart="19dp" />

        <TextView
            android:id="@+id/textViewComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewUser"
            android:layout_alignStart="@+id/textViewUser"
            android:textSize="@dimen/item_comment_text"
            android:lineSpacingExtra="@dimen/item_comment_text_line_height"
            android:minHeight="12dp"
            android:singleLine="false"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. "
            android:layout_marginTop="@dimen/item_comment_text_marginTop"/>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textViewComment"
            android:background="@color/colorBackgraound"
            android:layout_alignStart="@+id/textViewComment" />


    </RelativeLayout>

</android.support.v7.widget.CardView>