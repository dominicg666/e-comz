<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/food_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_image_height"
            android:scaleType="centerCrop"
            android:src="@drawable/menu_01"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="#e9ff5100"
            android:background="@drawable/icon_offer"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="14dp" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorWhite"
                android:text="OFF"
                android:gravity="center"
                android:layout_marginTop="-2dp"
                android:textSize="11sp"
                android:layout_below="@+id/textView4" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@+id/food_img">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classic double stffed"
                android:textSize="16sp"
                android:textColor="@color/colorMenu"/>

            <TextView
                android:id="@+id/contentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza"
                android:textSize="13sp"
                android:textColor="@color/colorGray"
                android:layout_marginTop="21dp" />
            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$14.20"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:layout_alignBottom="@+id/titleTextView"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>