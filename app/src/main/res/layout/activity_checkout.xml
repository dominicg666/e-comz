<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgraound">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Type"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/heading_light_size"
                android:layout_marginStart="@dimen/heading_light_marginStart"
                android:layout_marginTop="@dimen/heading_light_marginStart" />

            <Spinner
                android:id="@+id/spinner_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spinner_margin_right_left"
                android:layout_marginLeft="@dimen/spinner_margin_right_left"
                android:textColor="@color/colorMenu"
                android:paddingTop="@dimen/spinner_padding_top"
                android:paddingLeft="@dimen/spinner_padding_right_left"
                android:paddingRight="@dimen/spinner_padding_right_left"
                android:spinnerMode="dropdown"
                android:background="@drawable/bg_spinner"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_below="@+id/order_type"
                android:layout_marginTop="14dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/textView_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order"
                android:textSize="@dimen/heading_sub_light_size"
                android:textColor="@color/colorAccent"
                android:drawableRight="@drawable/spinner_icon"
                android:layout_marginStart="@dimen/heading_sub_light_marginStart"
                android:layout_marginTop="@dimen/heading_sub_light_marginTop"
                android:layout_alignTop="@+id/spinner_order"
                android:layout_alignStart="@+id/spinner_order"
                android:layout_alignEnd="@+id/spinner_order"
                android:layout_marginEnd="@dimen/heading_sub_light_marginStart" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Address"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/heading_light_size"
                android:layout_marginTop="@dimen/heading_light_marginStart"
                android:layout_below="@+id/spinner_order"
                android:layout_alignStart="@+id/order_type" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/heading_sub_light_size"
                android:background="@null"
                android:drawableLeft="@drawable/button_add"
                android:text="Add New"
                android:textColor="@color/colorMenu"
                android:id="@+id/add_new_address"
                android:layout_alignTop="@+id/textView3"
                android:layout_above="@+id/spinner1"
                android:layout_alignEnd="@+id/spinner1" />
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spinner_margin_right_left"
                android:layout_marginLeft="@dimen/spinner_margin_right_left"
                android:textColor="@color/colorMenu"
                android:paddingTop="@dimen/spinner_padding_top"
                android:paddingLeft="@dimen/spinner_padding_right_left"
                android:paddingRight="@dimen/spinner_padding_right_left"
                android:spinnerMode="dropdown"
                android:background="@drawable/bg_spinner"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/spinner01_margin_top" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="@dimen/heading_sub_light_size"
                android:textColor="@color/colorAccent"
                android:drawableRight="@drawable/spinner_icon"
                android:layout_marginStart="@dimen/heading_sub_light_marginStart"
                android:layout_marginTop="@dimen/heading_sub_light_marginTop"
                android:layout_alignTop="@+id/spinner1"
                android:layout_alignStart="@+id/spinner1"
                android:layout_alignEnd="@+id/spinner1"
                android:layout_marginEnd="@dimen/heading_sub_light_marginStart"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView9"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginBottom="@dimen/heading_light_marginBottom"
                android:layout_marginTop="@dimen/heading_light_marginStart"
                android:text="Payment Options"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/heading_light_size" />


            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spinner_margin_right_left"
                android:layout_marginLeft="@dimen/spinner_margin_right_left"
                android:textColor="@color/colorMenu"
                android:paddingTop="@dimen/spinner_padding_top"
                android:paddingLeft="@dimen/spinner_padding_right_left"
                android:paddingRight="@dimen/spinner_padding_right_left"
                android:spinnerMode="dropdown"
                android:background="@drawable/bg_spinner"
                android:layout_marginTop="@dimen/spinner02_margin_top"
                android:layout_below="@+id/spinner1"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textSize="@dimen/heading_sub_light_size"
                android:textColor="@color/colorAccent"
                android:drawableRight="@drawable/spinner_icon"
                android:layout_marginStart="@dimen/heading_sub_light_marginStart"
                android:layout_marginTop="@dimen/heading_sub_light_marginTop"
                android:layout_alignTop="@+id/spinner2"
                android:layout_alignStart="@+id/spinner2"
                android:layout_alignEnd="@+id/textView7" />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/bottomCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cart_bottom_card"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:foreground="@drawable/ripple_rectangle"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="0dp"
            app:cardElevation="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHECKOUT"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/cart_bottom_price"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp" />

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="14dp"
                    android:text="$200.00"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/cart_bottom_price" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>